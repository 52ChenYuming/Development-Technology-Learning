.ql-container{
  background: #eee;
  padding: 20rpx;
}
.publish-note{
  width: 100%;
}
.note-wrap{
  padding: 10rpx 20rpx;
}
.note-title{
  margin-bottom: 30rpx;
}
.note-title > view{
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(69, 90, 100, 0.6);
  padding: 10px;
}
.note-type{
  float: right;
  width: 140rpx;
  position: relative;
}
.note-type::after{
  content:'';
  position: absolute;
  border-top: 2rpx solid rgba(69, 90, 100, 0.6);
  border-right: 2rpx solid rgba(69, 90, 100, 0.6);
  right: 0;
  top: 10rpx;
  width: 15rpx;
  height: 15rpx;
  transform:rotate(45deg) ;
}
